<%= form_for([:admin,@product], html: { class: "form-horizontal check_form_validator" }) do |form| %>
  <%= render "layouts/shared/object_flash_messages", object: product %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label>Name:</label>
        <div class="input-group">
          <span class="input-group-prepend">
            <span class="input-group-text"><i class="icon-store2"></i></span>
          </span>
          <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>
      </div>
      <div class="form-group">
        <label>Sku Id:</label>
        <div class="input-group">
          <span class="input-group-prepend">
            <span class="input-group-text"><i class="icon-earth"></i></span>
          </span>
          <%= form.text_field :sku_id, class: "form-control", placeholder: "sku_id" %>
        </div>
      </div>      
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label>Price:</label>
        <div class="input-group">
          <span class="input-group-prepend">
            <span class="input-group-text"><i class="icon-earth"></i></span>
          </span>
          <%= form.text_field :price, class: "form-control", placeholder: "price" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
         <% if product.image.attached?%>
        <label>Image:</label>
        <div class="input-group">
            <%= image_tag url_for(product.image), :class => "style_image rounded-circle"%>            
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group text-right">
        <button type="submit" class="btn bg-slate-800" data-disable-with="Processing...">Submit <i class="icon-circle-right2 ml-2"></i></button>
      </div>
    </div>
  </div>
<% end %>
<script type="text/javascript">
  $('.form-check-input-styled').uniform();
</script>